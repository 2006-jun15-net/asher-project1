@model IEnumerable<StoreApplication.WebUI.ViewModels.OrderHistoryViewModel>

@{
    ViewData["Title"] = "LocationHistories";
}
@{ 
    int listIndex = 1;
}

<h1>LocationHistories</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOrdered)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @listIndex
                @{ 
                    listIndex++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOrdered)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
